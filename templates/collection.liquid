{% comment %}
  Kollektionsseite Template
{% endcomment %}

<div class="collection-page section">
  <div class="container">
    {%- if collection.title != blank -%}
      <h1 class="collection-page__title text-center mb-xl">{{ collection.title }}</h1>
    {%- endif -%}

    {%- if collection.description != blank -%}
      <div class="collection-page__description text-center mb-xl">
        {{ collection.description }}
      </div>
    {%- endif -%}

    {%- if collection.products.size > 0 -%}
      <div class="collection-page__grid grid grid--4-col">
        {%- for product in collection.products -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        <div class="collection-page__pagination text-center mt-xl">
          {% render 'pagination', paginate: paginate %}
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="collection-page__empty text-center">
        <p>Keine Produkte in dieser Kollektion gefunden.</p>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .collection-page__title {
    font-size: 4rem;
  }

  .collection-page__description {
    font-size: 1.6rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .collection-page__grid {
    margin-bottom: var(--spacing-xl);
  }
</style>




