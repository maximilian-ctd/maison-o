<section class="newsletter-form section">
  <div class="container">
    <div class="newsletter-form__wrapper">
      {%- if section.settings.image != blank -%}
        <div class="newsletter-form__image">
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="newsletter-form__image-element"
            loading="lazy"
          >
        </div>
      {%- else -%}
        <div class="newsletter-form__image newsletter-form__image--placeholder">
          <div class="newsletter-form__placeholder">
            <span class="newsletter-form__placeholder-text">1449 x 937</span>
          </div>
        </div>
      {%- endif -%}

      <div class="newsletter-form__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="newsletter-form__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.question != blank -%}
          <p class="newsletter-form__question">{{ section.settings.question }}</p>
        {%- endif -%}

        {%- form 'customer', class: 'newsletter-form__form', id: 'NewsletterForm' -%}
          <div class="newsletter-form__fields">
            <div class="newsletter-form__field">
              <input
                type="text"
                name="contact[first_name]"
                id="NewsletterFirstName"
                class="newsletter-form__input"
                placeholder="{{ section.settings.first_name_placeholder | default: 'Vorname' }}"
                required
              >
            </div>

            <div class="newsletter-form__field">
              <input
                type="text"
                name="contact[last_name]"
                id="NewsletterLastName"
                class="newsletter-form__input"
                placeholder="{{ section.settings.last_name_placeholder | default: 'Nachname' }}"
                required
              >
            </div>
          </div>

          <input type="hidden" name="contact[email]" value="newsletter@example.com">
          <input type="hidden" name="contact[tags]" value="newsletter">

          <button type="submit" class="newsletter-form__submit">
            {{ section.settings.button_text | default: 'nächster Schritt' }}
          </button>
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

<style>
  .newsletter-form {
    background-color: var(--color-background);
    padding: var(--spacing-3xl) 0;
    position: relative;
    z-index: 10;
    margin-top: -100px;
  }

  .newsletter-form__wrapper {
    background-color: var(--color-background);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    max-width: 900px;
    margin: 0 auto;
  }

  .newsletter-form__image {
    width: 100%;
    aspect-ratio: 1449 / 937;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .newsletter-form__image-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .newsletter-form__image--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e0e0e0;
  }

  .newsletter-form__placeholder {
    text-align: center;
    padding: var(--spacing-xl);
  }

  .newsletter-form__placeholder-text {
    font-size: 1.4rem;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .newsletter-form__content {
    padding: var(--spacing-2xl);
  }

  .newsletter-form__heading {
    font-size: 2.4rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    text-align: center;
    color: var(--color-text);
  }

  .newsletter-form__question {
    font-size: 1.6rem;
    margin-bottom: var(--spacing-xl);
    text-align: center;
    color: var(--color-text);
  }

  .newsletter-form__form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .newsletter-form__fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .newsletter-form__field {
    width: 100%;
  }

  .newsletter-form__input {
    width: 100%;
    padding: var(--spacing-md) var(--spacing-lg);
    background-color: var(--color-primary);
    color: var(--color-secondary);
    border: none;
    border-radius: var(--border-radius);
    font-size: 1.4rem;
    font-family: inherit;
  }

  .newsletter-form__input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter-form__input:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .newsletter-form__submit {
    width: 100%;
    padding: var(--spacing-md);
    background-color: transparent;
    color: var(--color-text);
    border: none;
    font-size: 1.4rem;
    text-decoration: underline;
    cursor: pointer;
    text-align: center;
    transition: color var(--transition-fast);
  }

  .newsletter-form__submit:hover {
    color: var(--color-primary);
  }

  @media (max-width: 767px) {
    .newsletter-form {
      margin-top: -50px;
      padding: var(--spacing-xl) 0;
    }

    .newsletter-form__content {
      padding: var(--spacing-lg);
    }

    .newsletter-form__heading {
      font-size: 2rem;
    }

    .newsletter-form__fields {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Newsletter Form",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Bild (1449 x 937)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Sichern Sie sich Ihren exklusiven Platz"
    },
    {
      "type": "text",
      "id": "question",
      "label": "Frage",
      "default": "Wie dürfen wir Sie nennen?"
    },
    {
      "type": "text",
      "id": "first_name_placeholder",
      "label": "Vorname Platzhalter",
      "default": "Vorname"
    },
    {
      "type": "text",
      "id": "last_name_placeholder",
      "label": "Nachname Platzhalter",
      "default": "Nachname"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "nächster Schritt"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Form"
    }
  ]
}
{% endschema %}




