<style>
  .footer {
    background-color: #340000;
    color: #ffffff;
    padding-top: 0;
    padding-bottom: 32px;
    margin-top: 0;
    position: relative;
    z-index: 20;
    width: 100% !important;
    box-sizing: border-box;
  }

  /* Überschreibe alle möglichen Container-Wrapper */
  .footer .container,
  .footer > .container,
  section[data-section-type="footer"] .container,
  section[data-section-type="footer"] {
    max-width: none !important;
    width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .footer__inner {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: nowrap;
    gap: var(--spacing-lg);
    padding-left: 54px !important;
    padding-right: 0;
    padding-top: 20px;
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
    box-sizing: border-box;
  }

  .footer__nav {
    flex: 0 0 auto;
    min-width: 0;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    position: relative;
  }

  .footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
    padding-left: 0;
  }

  .footer__social {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: var(--spacing-md);
    flex: 0 0 auto;
    margin-left: auto;
    padding-right: 30px;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: #ffffff;
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .footer__social-link:hover {
    opacity: 0.7;
  }

  .footer__social-link svg {
    width: 24px;
    height: 24px;
  }

  .footer__menu-item {
    margin: 0;
  }

  .footer__menu-link {
    font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 0.75rem;
    font-weight: 400;
    line-height: 1.5;
    color: #ffffff;
    text-decoration: none;
    transition: opacity var(--transition-fast);
    display: inline-block;
  }

  .footer__menu-link:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  .footer__menu-toggle {
    display: none;
  }

  .footer__menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    padding-left: 0;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }

  .footer__nav {
    position: relative;
  }

  @media (max-width: 767px) {
    .footer {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .footer__inner {
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      padding-left: 0;
      padding-right: 0;
      flex-wrap: wrap;
    }

    .footer__nav {
      width: 100%;
      position: relative;
    }

    .footer__menu-toggle {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      height: auto;
      padding: 12px 20px;
      background: transparent;
      border: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 0;
      color: #ffffff;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .footer__menu-toggle:hover {
      opacity: 0.8;
    }

    .footer__menu-toggle-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      transition: transform 0.3s ease;
    }

    .footer__menu-toggle-icon svg {
      width: 18px;
      height: 18px;
    }

    .footer__menu-toggle[aria-expanded="true"] .footer__menu-toggle-icon {
      transform: rotate(90deg);
    }

    .footer__menu {
      display: none;
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
      padding-left: 20px;
      padding-right: 20px;
      padding-top: var(--spacing-md);
      width: 100%;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease, padding-top 0.3s ease, padding-bottom 0.3s ease;
      position: relative;
      background-color: transparent;
      z-index: 10;
      margin-top: 0;
      border-radius: 0;
      box-shadow: none;
    }

    .footer__menu.is-open {
      display: flex;
      max-height: 1000px;
      padding-top: var(--spacing-md);
      padding-bottom: var(--spacing-md);
    }

    .footer__menu-link {
      font-size: 0.6rem;
    }

    .footer__social {
      align-self: flex-end;
      padding-right: 20px;
      padding-top: var(--spacing-md);
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menü",
      "info": "Wenn kein Menü ausgewählt ist, werden die einzelnen Links unten verwendet."
    },
    {
      "type": "header",
      "content": "Einzelne Links"
    },
    {
      "type": "checkbox",
      "id": "show_impressum",
      "label": "Impressum anzeigen",
      "default": true
    },
    {
      "type": "url",
      "id": "impressum_link",
      "label": "Impressum Link"
    },
    {
      "type": "checkbox",
      "id": "show_datenschutz",
      "label": "Datenschutz anzeigen",
      "default": true
    },
    {
      "type": "url",
      "id": "datenschutz_link",
      "label": "Datenschutz Link"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "whatsapp_link",
      "label": "WhatsApp Link"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram Link"
    }
  ]
}
{% endschema %}

<script>
  (function() {
    const menuToggle = document.querySelector('.footer__menu-toggle');
    const footerMenu = document.querySelector('.footer__menu');
    
    if (!menuToggle || !footerMenu) return;
    
    menuToggle.addEventListener('click', function() {
      const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
      
      if (isExpanded) {
        menuToggle.setAttribute('aria-expanded', 'false');
        footerMenu.classList.remove('is-open');
      } else {
        menuToggle.setAttribute('aria-expanded', 'true');
        footerMenu.classList.add('is-open');
      }
    });
  })();
</script>
