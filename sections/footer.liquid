<footer class="footer" role="contentinfo">
  <div class="footer__inner">
    <nav class="footer__nav">
      <button type="button" class="footer__menu-toggle" aria-label="Menü öffnen/schließen" aria-expanded="false">
        <span class="footer__menu-toggle-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="6" x2="21" y2="6"/>
            <line x1="3" y1="12" x2="21" y2="12"/>
            <line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
        </span>
      </button>
      {%- if section.settings.footer_menu != blank -%}
        <ul class="footer__menu">
          {%- for link in section.settings.footer_menu.links -%}
            <li class="footer__menu-item">
              <a href="{{ link.url }}" class="footer__menu-link">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      {%- else -%}
        <ul class="footer__menu">
          {%- if section.settings.show_impressum -%}
            <li class="footer__menu-item">
              <a href="{{ section.settings.impressum_link | default: '/pages/impressum' }}" class="footer__menu-link">
                Impressum
              </a>
            </li>
          {%- endif -%}
          {%- if section.settings.show_datenschutz -%}
            <li class="footer__menu-item">
              <a href="{{ section.settings.datenschutz_link | default: '/pages/datenschutz' }}" class="footer__menu-link">
                Datenschutz
              </a>
            </li>
          {%- endif -%}
        </ul>
      {%- endif -%}
    </nav>
    
    <div class="footer__social">
      {%- if section.settings.whatsapp_link != blank -%}
