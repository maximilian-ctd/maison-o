{%- liquid
  assign products_to_display = section.settings.products_to_show | default: 8
-%}

<section class="featured-collection section">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="featured-collection__title text-center">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}

    {%- if section.settings.collection != blank -%}
      <div class="featured-collection__grid grid grid--{{ section.settings.columns_desktop }}col">
        {%- for product in collections[section.settings.collection].products limit: products_to_display -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all -%}
        <div class="featured-collection__view-all text-center mt-lg">
          <a href="{{ collections[section.settings.collection].url }}" class="button">
            Alle Produkte anzeigen
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="featured-collection__placeholder">
        <p class="text-center">Bitte wählen Sie eine Kollektion aus.</p>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .featured-collection {
    background-color: var(--color-primary);
    color: var(--color-secondary);
  }

  .featured-collection__title {
    margin-bottom: var(--spacing-2xl);
    color: var(--color-secondary);
  }

  .featured-collection__grid {
    margin-bottom: var(--spacing-xl);
  }

  .featured-collection__placeholder {
    color: var(--color-secondary);
  }
</style>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Überschrift",
      "default": "Ausgewählte Produkte"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Kollektion"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Anzahl Produkte",
      "min": 4,
      "max": 16,
      "step": 2,
      "default": 8
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Spalten (Desktop)",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "'Alle anzeigen' Button anzeigen",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

